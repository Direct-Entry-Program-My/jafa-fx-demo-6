<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="555.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TableFormController">
   <children>
      <TableView fx:id="tblCustomers" layoutX="15.0" layoutY="211.0" prefHeight="330.0" prefWidth="571.0">
        <columns>
          <TableColumn prefWidth="75.0" text="Id" />
          <TableColumn prefWidth="242.0" text="Name" />
            <TableColumn prefWidth="253.0" text="Address" />
        </columns>
      </TableView>
      <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
         <children>
            <Label text="Customer ID" />
            <TextField fx:id="txtId" promptText="Ex: C001" />
            <Label text="Customer Name" />
            <TextField fx:id="txtName" promptText="Eg: Eranga" />
            <Label text="Customer Address" />
            <TextField fx:id="txtAddress" promptText="Eg: Panadura" />
         </children>
      </VBox>
      <Button fx:id="btnSaveCustomer" layoutX="249.0" layoutY="41.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: #7292BA; -fx-text-fill: white;" text="Save Customer" />
      <Button fx:id="btnNewCustomer" layoutX="249.0" layoutY="105.0" mnemonicParsing="false" style="-fx-background-color: green; -fx-text-fill: white;" text="New Customer +" />
      <Button fx:id="btnDeleteCustomer" layoutX="249.0" layoutY="170.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: red; -fx-text-fill: yellow;" text="Delete Customer" />
   </children>
</AnchorPane>
